<Window x:Class="Project3.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project3"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800" 
        FontFamily="Comic Sans MS" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Дата формирования заказа" Grid.Column="0" Grid.Row="0"/>
        <TextBlock Text="Дата доставки заказа" Grid.Column="0" Grid.Row="1"/>
        <TextBlock Text="ФИО клиента" Grid.Column="0" Grid.Row="2"/>
        <TextBlock Text="Номер заказа" Grid.Column="0" Grid.Row="3"/>
        <TextBlock Text="Пункт выдачи" Grid.Column="0" Grid.Row="5"/>

    </Grid>
</Window>
